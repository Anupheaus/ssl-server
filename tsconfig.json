{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "importHelpers": false,
    "noEmit": true,
    "removeComments": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist",
    "paths": {
      "@anupheaus/common": [
        "../common/src"
      ],
    },
    "lib": [
      "DOM",
      "ES2020",
      "ES2021",
      "ESNext.AsyncIterable"
    ],
    "target": "ES2022",
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "types/*"
  ],
  "exclude": [
    "dist"
  ],
}